@model LibraryWebApp.Models.BookViewModel

@{
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>


@if (Model is null)
{
    <h5 class="card-title">Book is not found</h5>
    <p class="card-text">See all books <a href="/book">here</a></p>
}
else
{
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.AuthorName has written @Model.Name in @Model.ReleaseDate</p>
    <a class="btn btn-primary" href="/book">Return to all books</a>
}

<a class="btn btn-outline-primary" href="/book/create">Add New Book</a>